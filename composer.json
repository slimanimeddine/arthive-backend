{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "slimanimeddine/arthive-backend",
  "type": "project",
  "description": "The backend for Arthiive, a platform for artists to showcase their work.",
  "keywords": [
    "laravel",
    "framework",
    "php",
    "art",
    "artists",
    "gallery"
  ],
  "authors": [
    {
      "role": "Developer",
      "name": "Imed Eddine Abderrahmane SLIMANI",
      "email": "imeds2000@gmail.com",
      "homepage": "https://slimanimeddine.vercel.app/"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "knuckleswtf/scribe": "^5.2.1",
    "laravel/framework": "^12.21.0",
    "laravel/reverb": "^1.5.1",
    "laravel/sanctum": "^4.2.0",
    "laravel/scout": "^10.17.0",
    "laravel/tinker": "^2.10.1",
    "resend/resend-laravel": "^0.19.0",
    "spatie/laravel-query-builder": "^6.3.",
    "typesense/typesense-php": "^5.1.0",
    "spatie/laravel-url-signer": "^3.2.1"
  },
  "require-dev": {
    "fakerphp/faker": "^1.24.1",
    "laravel/pail": "^1.2.3",
    "laravel/pint": "^1.24",
    "laravel/sail": "^1.44.0",
    "mockery/mockery": "^1.6.12",
    "nunomaduro/collision": "^8.7",
    "pestphp/pest": "^3.8",
    "pestphp/pest-plugin-laravel": "^3.1"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" -n \"server,reverb,queue,typesense\" \"php artisan serve\" \"php artisan reverb:start --debug\" \"php artisan queue:listen\" \"sh -c \\\"cd $HOME && ./typesense-server --data-dir=$HOME/typesense-data --api-key={$TYPESENSE_API_KEY} --enable-cors\\\"\""
    ],
    "pint": [
      "./vendor/bin/pint"
    ],
    "doc:gen": [
      "@php artisan scribe:generate --verbose"
    ]
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
